#!/bin/bash

if [ -d "./node_modules" ]; then
  NODE_MODULES="./node_modules"
else
  NODE_MODULES="../node_modules"
fi

touch .patched

patch \
    $NODE_MODULES/@now/build-utils/fs/run-user-scripts.js \
    ./patches/@now/build-utils/fs/run-user-scripts.js

patch \
    $NODE_MODULES/@now/node-bridge/bridge.js \
    ./patches/@now/node-bridge/bridge.js